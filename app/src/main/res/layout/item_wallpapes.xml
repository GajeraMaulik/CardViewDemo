<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_20sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/pdProductView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_108sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/fb" />


        <TextView
            android:id="@+id/pTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_114sdp"
            android:fontFamily="@font/lato"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:text="Product \nName"
            android:textColor="@color/black"
            android:textSize="@dimen/_6sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pPrice"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_130sdp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:lineHeight="@dimen/_20sdp"
            android:text="price"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textFontWeight="500"
            android:textSize="@dimen/_9sdp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/pDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_150sdp"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />

        <TextView
            android:id="@+id/pCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_260sdp"
            android:text="Category"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />
        <!-- <TextView
            android:id="@+id/pRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_290sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="Rate"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/pCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_290sdp"
            android:layout_marginStart="@dimen/_100sdp"
            android:text="Count"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />
-->

        <ImageView
            android:id="@+id/no_Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:src="@drawable/nodata"
            android:visibility="gone" />


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
